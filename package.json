{
  "name": "@plasius/voice",
  "version": "1.1.3",
  "description": "A Voice -> Intent mapper component library (multi-lingual compatible with @plasius/translations)",
  "homepage": "https://github.com/Plasius-LTD/voice#readme",
  "bugs": {
    "url": "https://github.com/Plasius-LTD/voice/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/voice.git"
  },
  "license": "Apache-2.0",
  "author": "Plasius LTD",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test:watch": "vitest",
    "audit:eslint": "eslint . --max-warnings=0 --report-unused-disable-directives-severity off",
    "audit:deps": "npm ls --all --omit=optional --omit=peer > /dev/null 2>&1 || true",
    "audit:npm": "npm audit --audit-level=high --omit=dev",
    "audit:test": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0 --report-unused-disable-directives-severity off",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "test": "vitest run --environment jsdom",
    "test:coverage": "vitest run --coverage",
    "pack:check": "node scripts/verify-public-package.cjs",
    "prepublishOnly": "npm run build && npm run pack:check"
  },
  "dependencies": {
    "@plasius/nfr": "^1.0.4",
    "@plasius/react-state": "^1.2.2",
    "@plasius/translations": "^1.0.9"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://patreon.com/PlasiusLTD"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ],
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
