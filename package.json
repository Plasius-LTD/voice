{
  "name": "@plasius/voice",
  "version": "1.1.0-beta.9",
  "description": "A Voice -> Intent mapper component library (multi-lingual compatible with @plasius/translations)",
  "homepage": "https://github.com/Plasius-LTD/voice#readme",
  "bugs": {
    "url": "https://github.com/Plasius-LTD/voice/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/voice.git"
  },
  "license": "Apache-2.0",
  "author": "Plasius LTD",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "test": "vitest run --environment jsdom"
  },
  "dependencies": {
    "@plasius/nfr": "^1",
    "@plasius/react-state": "^1",
    "@plasius/translations": "^1"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "react": "^19",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://patreon.com/PlasiusLTD"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ]
